<div class="formin">

	<%= form_for @viking, :html => {:multipart => true} do |f| %>
		<p class="group_form">
			<%= f.label :name %> <br>
			<%= f.text_field :name, class: 'form-control'%>
		</p>

		<p class="group_form">
			<%= f.label :choose_an_image %> <br>
			<%= f.file_field :image, class: 'form-control' %> 
		</p>

		<p class="group_form">
			<%= f.label :Viking_history %> <br>
			<%= f.text_area :history, class: 'form-control' %>
		</p>

		<p class="group_form">
			<%= f.submit class: 'btn btn-success btn-lg' %>
		</p>

	<% end %>

</div>