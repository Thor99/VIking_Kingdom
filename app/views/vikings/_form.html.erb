<%= form_for @viking, :html => {:multipart => true} do |f| %>
	<p>
		<%= f.label :name %> <br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :choose_an_image %> <br>
		<%= f.file_field :image %>
	</p>

	<p>
		<%= f.label :Viking_history %> <br>
		<%= f.text_area :history %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>